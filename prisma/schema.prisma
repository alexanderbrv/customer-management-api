generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
    id          Int         @id @default(autoincrement())
    name        String
    email       String      @unique
    type        Type
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
}

enum Type {
    individual
    business
    government
    institution
}